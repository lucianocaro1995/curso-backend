<!--Lista de productos agregados hasta el momento-->
<!--Este archivo no se está viendo en mi body, hasta que clickeen "Mostrar productos"-->
<!--Esta vista debe consultar a la raíz "/" get products. Ejecutar este método con handlebars-->

<table id="productsTable" class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Título</th>
            <th scope="col">Descripción</th>
            <th scope="col">Precio</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Código</th>
            <th scope="col">Stock</th>
            <th scope="col">Estado</th>
        </tr>
    </thead>
    
    <tbody>
        <!--Esto es un bucle en handlebars-->
        {{#each products}}
        <tr>
            <!--El this hace referencia a cada objeto del forEach-->
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>