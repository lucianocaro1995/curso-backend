<!--Este código es HTML agregando handlebars-->
<!--La única diferencia es que handlebars permite utilizar plantillas con llaves. Como puse en el main-->
<!--Este archivo hace de mi body en el endpoint "http://localhost:4000/home"-->



<!--Login-->
<h2 id="bienvenido"></h2>
<h3 id="email"></h3>
<h3 id="age"></h3>
<a href="/logout">Desloguear</a>



<!--Lista de productos -->
<table id="productsTable" class="table">
    <!--Parte superior de la tabla con los nombres de los campos -->
    <thead>
        <tr>
            <th scope="col">Título</th>
            <th scope="col">Descripción</th>
            <th scope="col">Categoría</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Precio</th>
            <th scope="col">Stock</th>
            <th scope="col">Código</th>
            <th scope="col">ID</th>
            <th scope="col">Estado</th>
        </tr>
    </thead>
    
    <!--Cuerpo de la tabla con los productos agregados a la lista -->
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category}}</td>
            <td>{{this.thumbnail}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.code}}</td>
            <td>{{this.id}}</td>
            <td>{{this.status}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>